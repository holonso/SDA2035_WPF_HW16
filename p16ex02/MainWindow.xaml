<Window x:Class="p16ex02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:p16ex02"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="350" Loaded="WindowLoadedEvent">
    <Canvas>
        <Ellipse x:Name="Ball" 
                 Width="50" Height="50"
                 StrokeThickness="2"
                 Stroke="Black" 
                 Canvas.Left="145" Canvas.Top="400"
                 RenderTransformOrigin="0.5,0.5">
            <Ellipse.Fill>
                <RadialGradientBrush Center="0.3,0.3" GradientOrigin="0.3,0.3">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="Crimson" Offset="1"/>
                    <GradientStop Color="Pink" Offset="0.385"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
    </Canvas>
</Window>
